{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <a id="sil" href="/bolum_sil/{{ bolum.id }}" class="btn btn-danger btn-block">Bolum Sil</a>
    <a style="margin-top: 15px;" class=" btn btn-primary btn-md btn-block" href={{ path('bolumler') }} >Geri</a>

    <!-- Gorevli silinmeden once emin misiniz sorusu icin  -->
    <script>
        document.getElementById("sil").addEventListener("click", deleteAction); // id verilen butonun click olma durumu icin

        function deleteAction(evt) { // click oldugunda cagirilacak fonksiyon

            if(confirm("Emin misiniz?"))  // yes no cikarmak icin
            {
                alert('Silindi!');  // yes ise
            }
            else
            {
                evt.preventDefault();  // no ise vazgecmek icin
            }


        }

    </script>


{% endblock %}