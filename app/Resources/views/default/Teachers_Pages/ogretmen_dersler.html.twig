{% extends 'base.html.twig' %}
{% block body %}
    {% set teori = 0%}
    {% set pratik = 0 %}
    <table class="table">
        <thead>
        <tr>
            <th>Görevli Ad Soyad : {{ ogretmen.gorevliAd }} {{ ogretmen.gorevliSoyad }} </th>
            <th>Görevlendirme : {{ ogretmen.gorevlendirme }}</th>
            <th>Ünvan : {{ ogretmen.gorevliunvan }}</th>
            <th>No : {{ ogretmen.gorevliNo}}</th>
            <th>Toplam Ders Sayısı : {{ ogretmen.dersler.count }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th>Dersin Adı</th>
            <th>Ders No</th>
            <th>Teorik Puani</th>
            <th>Uygulama Puani</th>


        </tr>
        {% for ders in ogretmen.dersler %}
            {% set teori = teori + ders.teoripuan %}
            {% set pratik = pratik + ders.pratikpuan %}

            <tr>
            <td>{{ ders.dersad }}</td>
            <td>{{ ders.dersKod }}</td>
            <td>{{ ders.teoripuan }}</td>
            <td>{{ ders.pratikpuan }}</td>

        </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr/>
        <div class="row" >
            <div class="col-xs-3">
                <h3>Toplam Teori: {{ teori }} </h3>
            </div>
            <div class="col-xs-3">
                <h3>Toplam Uygulama: {{ pratik }} </h3>
            </div>
            <div class="col-xs-6">
                <h3>Derslerin Toplam Uygulama ve Teori Ders Saatileri: {{ teori + pratik }} </h3>
            </div>

        </div>
    <a class="btn btn-default" href="{{ path('ogretim_gorevlileri') }}">Öğretim Görevlilerine Geri Dön</a>




{% endblock %}